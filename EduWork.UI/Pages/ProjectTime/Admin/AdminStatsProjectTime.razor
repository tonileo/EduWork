@page "/adminStatsProjectTime"

@using EduWork.UI.Components.ProjectTime
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>@ADMIN_PROJECT_STATS_TITLE</PageTitle>

<CascadingValue Value="@isAdmin">
<ProjectTimeStatsComponent ApiEndpoint=@ADMIN_PROJECT_STATS_ENDPOINT/>
</CascadingValue>

@code{
    public bool isAdmin { get; set; } = true;

    private const string ADMIN_PROJECT_STATS_TITLE = "Admin projektna statistika";
    private const string ADMIN_PROJECT_STATS_ENDPOINT = "api/ProjectTimes/statsFilter/admin";
}